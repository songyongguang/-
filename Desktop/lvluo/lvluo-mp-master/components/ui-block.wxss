.ui-block {
  padding: 30rpx;
  background-color: #fff;
  margin-bottom: 30rpx;
}

.ui-block .ui-block-header {
  font-size: 36rpx;
  color: #000;
  margin-bottom: 30rpx;
}
.ui-block .ui-block-header .ui-block-title {
  display: inline-block;
  vertical-align: middle; 
  height: 48rpx; 
  line-height: 48rpx; 
}
.ui-block .ui-block-header:before {
  content: '';
  display: inline-block;
  vertical-align: middle;
  width: 8rpx;
  height: 48rpx;
  border-radius: 2rpx;
  background-color: #09BB07;
  margin-right: 20rpx;
}