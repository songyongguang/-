/* pages/contact/joinus.wxss */
.page{
  display: flex;
  flex-direction: column;
 
}
image{
  width: 90%;
  margin: 10px 5%;
  border-radius: 3%;
}
text{
  display: block;
  text-indent: 2rem;
  font-size: 40rpx;
    margin: 0 5%; 
  
}
 .buttom{
   display: flex;
   flex-direction: column;
   margin-top: 20px;
 }
 input{
  border: 1px solid gray;
  width: 100%;
  height: 50px;
  line-height: 50px;
  border-radius: 5px;
}
.buttom .check,.buttom .name,.buttom .phone,.buttom .select{
  display: flex;
  flex-direction: row;
  height: 50px;
  width: 100%;
  margin-top: 10px;
}
.buttom .phone view,.buttom .check view,.buttom .name view,.buttom .select view{
  
  width: 65%;
}
.buttom .phone view{
  width: 45%;
}
.buttom .phone span,.buttom .check span,.buttom .name span,.buttom .select span{
  width: 20%;
  margin-left: 5%;
  margin-right: 5%;
  height: 50px;
  line-height: 50px;
}
.buttom .check span{
  width: 20%;
  margin-left: 5%;
  margin-right: 5%;
  height: 50px;
  line-height: 50px;
}
.confirm{
  width: 60%;
  background-color:#1AAD19;  
  margin-top: 30px;
  margin-bottom: 50px;
}