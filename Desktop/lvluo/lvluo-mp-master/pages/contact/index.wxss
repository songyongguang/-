/* pages/contact/index.wxss */
.contactPage{
  margin: 0;
  padding: 0;
  display: flex;
  flex-direction: column;
}
.top{
  position: relative;
  width: 100%;
}
.top image{
  filter: blur(1px);
  height: 100px;
  width: 100%;
}
.inof{
  position: absolute;
  display: flex;
  flex-direction: row;
  height: 50px;
  width: 80%;
  top: 25px;
  left: 20%;
}
.inof open-data:nth-child(1){
  width: 50px;
  height: 50px;
  border-radius: 50%;
  margin-right: 10%;
}
.photo1{
  width: 40px;
  height: 40px;
}
.photo2{
  width: 30px;
  height: 40px;
}
.content_top{
  height: 80px;
  display: flex;
  flex-direction: row;
  border: 1px solid gainsboro; 
}
.content_top view{
  display: flex;
  flex-direction: column;
  /* height: 100px;
  line-height: 100px; */
  width: 50%;
  text-align: center;
}
.content_top view text{
  display: block;
  height: 40px;
  line-height: 40px;
}
.content_top view text:nth-child(1){
  color: #1AAD19;
}
.content_top view:nth-child(1){
  border-right: 1px solid gainsboro;
}
.content_middle{
  display: flex;
  flex-direction: column;
}
.content_middle view{
  height: 60px;
  line-height: 60px;
 
}

.content_middle view view{
  display: block;
}
.content_middle view view{
  float: left;
}
.content_middle view view:nth-child(1){
  margin-left: 5%;
  margin-right: 4%;
  margin-top: 10px;
}
.content_middle view view:nth-child(2){
  margin-right: 45%;
  height: 60px;
  line-height: 60px;
}
.content_middle view view:nth-child(3){
 margin-top: 10px;
}
.content_middle view view img:nth-child(1){
  margin-right: 60%;
}