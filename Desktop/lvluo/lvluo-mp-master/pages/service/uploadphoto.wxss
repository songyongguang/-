.uploadPage{
  display: flex;
  flex-direction: column;
  margin:0 5% 20% 5%;
}
.top view{
  display: flex;
  flex-direction: row;
  width: 100%;
  margin: 3% 0;
}
.top view span {
  width: 5px;
  height: 30px;
  background-color: #1AAD19;
  margin-right: 5%;
}
.content{
  display: block;
  height: 250px;
}
.content image{
  float: left;
  width:100%;
  height: 100px;
   margin-right: 3%; 
}
.content .img{
  position: relative;
  float: left;
  width: 30%;
  height: 100px;
}
.content .delete-btn{
  position: absolute;
  right: 0;
